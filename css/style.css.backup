/* Stair layout for timeline */
.stair-layout {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    position: relative;
    max-width: 100%;
    margin: 40px auto;
}

.stair-layout::before {
    display: none; /* Remove vertical line */
}

.stair-layout .timeline-item {
    width: 100%;
    padding: 0;
    left: 0;
    margin-bottom: 30px;
}

.stair-layout .timeline-item:nth-child(even) {
    left: 0;
}

.stair-layout .timeline-dot {
    display: none; /* Hide timeline dots */
}

.stair-layout .timeline-content {
    padding: 25px;
    background-color: var(--card-bg);
    border-radius: 12px;
    box-shadow: var(--card-shadow);
    transition: all 0.3s ease;
    border: 1px solid var(--card-border);
    height: 100%;
    position: relative;
    overflow: hidden;
    border-left: 3px solid transparent;
    border-bottom: 3px solid transparent;
}

.stair-layout .timeline-content:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background: linear-gradient(90deg, var(--primary-color), transparent);
    opacity: 0;
    transition: all 0.5s ease;
}

.stair-layout .timeline-item:hover .timeline-content {
    transform: translateY(-8px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
    background-color: rgba(35, 35, 45, 0.9);
    border-left: 3px solid var(--primary-color);
    border-bottom: 3px solid var(--primary-color);
}

.stair-layout .timeline-item:hover .timeline-content:before {
    opacity: 0.05;
    width: 100%;
}

.stair-layout .timeline-content h3 {
    color: var(--primary-color);
    font-size: 1.4rem;
    margin-bottom: 10px;
}

