/* Prevent scrolling when nav is open */
body.nav-open {
    overflow: hidden;
}

/* Modern Mobile Navigation - Core Styles */
.mobile-nav-container {
    position: fixed;
    top: 0;
    right: -100%;
    width: 85%;
    max-width: 400px;
    height: 100vh;
    background-color: var(--card-bg);
    z-index: 1001;
    display: flex;
    flex-direction: column;
    box-shadow: -10px 0 30px rgba(0, 0, 0, 0.25);
    transition: right 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border-left: 1px solid rgba(255, 255, 255, 0.1);
    overflow-y: auto;
}

.mobile-nav-container.active {
    right: 0;
}

.mobile-nav-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(5px);
    z-index: 1000;
    visibility: hidden;
    opacity: 0;
    transition: all 0.3s ease;
}

.mobile-nav-backdrop.active {
    visibility: visible;
    opacity: 1;
}

.mobile-nav-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25px 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.mobile-logo {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--primary-color);
}

.mobile-nav-close {
    font-size: 2.5rem;
    color: var(--text-color);
    cursor: pointer;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    border-radius: 50%;
}

.mobile-nav-close:hover {
    background-color: rgba(255, 255, 255, 0.1);
    transform: rotate(90deg);
}

.mobile-nav-content {
    flex: 1;
    padding: 30px 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.mobile-nav-links {
    list-style: none;
    margin-bottom: 40px;
}

.mobile-nav-links li {
    margin-bottom: 20px;
    opacity: 0;
    transform: translateX(20px);
    transition: all 0.3s ease;
}

.mobile-nav-container.active .mobile-nav-links li {
    opacity: 1;
    transform: translateX(0);
}

/* Add staggered delay for each menu item */
.mobile-nav-container.active .mobile-nav-links li:nth-child(1) { transition-delay: 0.1s; }
.mobile-nav-container.active .mobile-nav-links li:nth-child(2) { transition-delay: 0.15s; }
.mobile-nav-container.active .mobile-nav-links li:nth-child(3) { transition-delay: 0.2s; }
.mobile-nav-container.active .mobile-nav-links li:nth-child(4) { transition-delay: 0.25s; }
.mobile-nav-container.active .mobile-nav-links li:nth-child(5) { transition-delay: 0.3s; }
.mobile-nav-container.active .mobile-nav-links li:nth-child(6) { transition-delay: 0.35s; }
.mobile-nav-container.active .mobile-nav-links li:nth-child(7) { transition-delay: 0.4s; }

.mobile-nav-links a {
    display: flex;
    align-items: center;
    color: var(--text-color);
    text-decoration: none;
    font-size: 1.1rem;
    padding: 12px 15px;
    border-radius: 12px;
    transition: all 0.3s ease;
    background-color: rgba(255, 255, 255, 0.05);
}

.mobile-nav-links a:hover, .mobile-nav-links a:active {
    background-color: var(--primary-color);
    color: #000;
    transform: translateX(5px);
}

.mobile-nav-links a i {
    margin-right: 15px;
    font-size: 1.2rem;
    width: 24px;
    text-align: center;
}

.mobile-social-links {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 20px;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.5s ease 0.4s;
}

.mobile-nav-container.active .mobile-social-links {
    opacity: 1;
    transform: translateY(0);
}

.mobile-social-links a {
    width: 50px;
    height: 50px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-color);
    font-size: 1.2rem;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.mobile-social-links a:hover {
    background-color: var(--primary-color);
    color: #000;
    transform: translateY(-5px);
}

/* Modern Mobile Menu Toggle Button */
.mobile-menu-toggle {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 22px;
    cursor: pointer;
    z-index: 100;
    margin-left: 20px;
}

.mobile-menu-toggle span {
    display: block;
    height: 2px;
    width: 100%;
    background-color: var(--text-color);
    border-radius: 2px;
    transition: all 0.3s ease;
}

.mobile-menu-toggle.active span:nth-child(1) {
    transform: translateY(10px) rotate(45deg);
}

.mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
}

.mobile-menu-toggle.active span:nth-child(3) {
    transform: translateY(-10px) rotate(-45deg);
}

/* Light mode styles for mobile navigation */
:root.light-mode .mobile-nav-container {
    background-color: rgba(255, 255, 255, 0.95);
    border-left: 1px solid rgba(0, 0, 0, 0.05);
    box-shadow: -10px 0 30px rgba(0, 0, 0, 0.1);
}

:root.light-mode .mobile-nav-header {
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

:root.light-mode .mobile-nav-close:hover {
    background-color: rgba(0, 0, 0, 0.05);
}

:root.light-mode .mobile-nav-links a {
    background-color: rgba(0, 0, 0, 0.03);
}

:root.light-mode .mobile-social-links a {
    background-color: rgba(0, 0, 0, 0.03);
    border: 1px solid rgba(0, 0, 0, 0.05);
}

/* Media Queries for Mobile Navigation */
@media screen and (max-width: 768px) {
    /* Hide desktop navigation on mobile */
    .desktop-nav {
        display: none;
    }
    
    /* Show mobile menu toggle */
    .mobile-menu-toggle {
        display: flex;
    }
    
    /* Adjust header for mobile */
    header {
        position: fixed;
        width: 100%;
        z-index: 1000;
    }
    
    /* Add padding to body when mobile nav is active */
    body.nav-open {
        overflow: hidden;
    }

    /* Improved nav container layout for mobile */
    nav.container {
        padding: 15px 20px;
        justify-content: space-between;
        align-items: center;
        background-color: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border-radius: 10;
        width: 100%;
    }

    /* Switch style adjustments for mobile */
    .switch {
        width: 60px;
        height: 25px;
    }

    .sun-moon {
        height: 19px;
        width: 19px;
    }

    #theme-toggle-btn:checked + .slider .sun-moon {
        transform: translateX(21px);
    }
}

/* Animation for mobile menu items */
@keyframes slideInRight {
    from {
        transform: translateX(20px);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

/* For very small screens */
@media screen and (max-width: 380px) {
    .mobile-nav-container {
        width: 100%;
    }
    
    .mobile-logo {
        font-size: 1.2rem;
    }
    
    .mobile-nav-links a {
        font-size: 1rem;
        padding: 10px 12px;
    }
    
    .mobile-social-links a {
        width: 45px;
        height: 45px;
        font-size: 1.1rem;
    }
}

/* Responsive About Me Section */
.parallax-about-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 350px;
    padding: var(--spacing-xl) 0;
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-2xl);
    width: 100%;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
}

.parallax-cards-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 20px;
    width: 100%;
}

/* Profile image styling */
.profile-image-wrapper {
    width: 180px;
    height: 180px;
    position: relative;
    z-index: 5;
    flex-shrink: 0;
    margin: 0 15px;
    animation: pulse 3s infinite ease-in-out;
}

.profile-image-container {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    overflow: hidden;
    position: relative;
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
    border: 4px solid var(--primary-color);
    transform: translateY(0);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.profile-image-container:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
}

.profile-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.profile-image-container:hover .profile-image {
    transform: scale(1.1);
}

.profile-glow {
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    background: radial-gradient(circle at center, var(--primary-color) 0%, transparent 70%);
    opacity: 0.2;
    transition: opacity 0.3s ease;
    z-index: -1;
    border-radius: 50%;
}

.profile-image-container:hover .profile-glow {
    opacity: 0.4;
}

/* Light mode styles for profile image */
:root.light-mode .profile-image-container {
    border-color: var(--primary-color);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
}

:root.light-mode .profile-image-container:hover {
    box-shadow: 0 20px 40px rgba(30, 112, 240, 0.2);
}

@keyframes pulse {
    0% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.05);
    }
    100% {
        transform: scale(1);
    }
}

@media (max-width: 768px) {
    .parallax-about-container {
        gap: var(--spacing-md);
        min-height: auto;
        margin-bottom: var(--spacing-2xl);
        padding: 0;
    }
    
    .parallax-cards-container {
        flex-direction: column;
        gap: 30px;
    }
    
    .profile-image-wrapper {
        order: -1;
        width: 140px;
        height: 140px;
        margin-bottom: 20px;
        animation: none;
    }
}

@media (max-width: 480px) {
    .profile-image-wrapper {
        width: 120px;
        height: 120px;
    }
}

.parallax-left h3 {
    color: var(--primary-color);
    font-size: calc(var(--heading-3) * 0.8);
    margin-bottom: var(--spacing-sm);
    font-weight: 500;
    position: relative;
    display: inline-block;
    text-align: center;
    width: 100%;
