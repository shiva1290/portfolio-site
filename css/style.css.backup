}

.parallax-image-base {
    z-index: 1;
    transform: translateY(calc(var(--parallax-offset) * var(--parallax-speed-2) * -1));
    transition: transform 0.1s ease-out;
}

.parallax-decorative-element {
    position: absolute;
    border-radius: 50%;
    filter: blur(20px);
    opacity: 0.6;
    z-index: 0;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
