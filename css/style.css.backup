    border-radius: 12px;
    bottom: -15px;
    right: -15px;
    z-index: 1;
    transform: rotate(15deg);
}

.parallax-badge {
    position: absolute;
    bottom: -25px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--card-bg);
    color: var(--text-color);
