/* Base styles and variables */
:root {
    --primary-bg: #000000;
    --secondary-bg: #080808;
    --card-bg: rgba(35, 35, 40, 0.65);
    --text-color: #F0F0F0;
    --primary-color: #5B8DEF;
    --secondary-color: #3366CC;
    --accent-color: #60b7ff;
    --card-border: rgba(255, 255, 255, 0.12);
    --card-shadow: 0 5px 20px rgba(0, 0, 0, 0.5);
    --font-primary: Manrope, "Manrope Placeholder", sans-serif;
    --font-secondary: ".SFNSText", SFProText-Regular, SFUIText-Regular, ".SFUIText", -apple-system, "system-ui", sans-serif;
    --transition: all 0.3s ease;
    --heading-1: clamp(2.5rem, 6vw, 4rem);
    --heading-2: clamp(1.8rem, 4vw, 2.8rem);
    --heading-3: clamp(1.2rem, 3vw, 1.8rem);
    --body-text: clamp(1rem, 2vw, 1.2rem);
    --small-text: clamp(0.8rem, 1.5vw, 0.9rem);
    --spacing-xs: 0.25rem;
    --spacing-sm: 0.5rem;
    --spacing-md: 1rem;
    --spacing-lg: 1.5rem;
    --spacing-xl: 2rem;
    --spacing-2xl: 3rem;
    --spacing-3xl: 4rem;
    --spacing-4xl: 6rem;
    --radius-sm: 0.25rem;
    --radius-md: 0.5rem;
    --radius-lg: 1rem;
    --radius-xl: 1.5rem;
    --radius-full: 9999px;
    caret-color: white;
    
    /* Parallax Variables */
    --parallax-speed-1: 0.1;
    --parallax-speed-2: 0.2;
    --parallax-speed-3: 0.3;
    --parallax-speed-4: 0.4;
    --parallax-offset: 0;
    
    /* Mobile-specific variables */
    --mobile-section-spacing: 3rem;
    --mobile-component-spacing: 1.5rem;
    --mobile-element-spacing: 1rem;
    --mobile-card-spacing: 1rem;
}

/* Light Mode Theme Variables - Enhanced version */
:root.light-mode {
    --primary-bg: #f5f5f7;
    --secondary-bg: #ffffff;
    --card-bg: rgba(245, 245, 250, 0.85);
    --text-color: #333333;
    --primary-color: #1e70f0;
    --secondary-color: #0a4bb3;
    --card-border: rgba(0, 0, 0, 0.08);
    --card-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    --card-border-color: rgba(0, 0, 0, 0.1);
    --white-color: #333; /* Dark text for light backgrounds */
}

/* Theme transition */
body {
    transition: background-color 0.5s ease, color 0.5s ease;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    transition: background-color 0.3s, color 0.3s, border-color 0.3s;
}

html {
    scroll-behavior: smooth;
    font-size: 16px;
}

body {
    font-family: var(--font-primary);
    font-optical-sizing: auto;
    font-style: normal;
    line-height: 1.6;
    color: var(--text-color);
    background-color: var(--primary-bg);
    font-size: var(--body-text);
    cursor: none;
}

.container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 clamp(var(--spacing-md), 3vw, var(--spacing-lg));
}

section {
    padding: clamp(60px, 8vw, 100px) 0;
    position: relative;
    margin-bottom: 0;
}

section + section {
    padding-top: clamp(40px, 6vw, 80px);
}

.section-title {
    font-size: var(--heading-2);
    text-align: center;
    margin-bottom: clamp(30px, 5vw, 50px);
    position: relative;
    color: var(--text-color);
    font-weight: 400;
    letter-spacing: -0.03em;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: -15px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background-color: var(--primary-color);
}

/* Custom Cursor */
.cursor {
    position: fixed;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: var(--primary-color);
    pointer-events: none;
    z-index: 9999;
    transform: translate(-50%, -50%);
    transition: width 0.2s, height 0.2s;
}

.cursor-follower {
    position: fixed;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 2px solid var(--secondary-color);
    pointer-events: none;
    z-index: 9998;
    transform: translate(-50%, -50%);
    transition: 0.1s ease;
}

/* Header and Navigation - Updated to be floating */
header {
    position: fixed;
    top: var(--spacing-xl);
    left: 0;
    right: 0;
    z-index: 1000;
    width: 100%;
    padding: 0 var(--spacing-xl);
}

nav.container {
    padding: var(--spacing-md) var(--spacing-lg);
    background-color: rgba(0, 0, 0, 0.85);
    border-radius: var(--radius-md);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.04);
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 100%;
    margin: 0;
}

.logo {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--primary-color);
    padding: var(--spacing-sm) var(--spacing-md);
}

.nav-links {
    display: flex;
    list-style: none;
    gap: var(--spacing-md);
}

.nav-links li {
    position: relative;
}

.nav-links a {
    text-decoration: none;
    color: var(--text-color);
    font-weight: 500;
    padding: var(--spacing-sm) var(--spacing-md);
    transition: var(--transition);
    position: relative;
    font-size: 0.95rem;
}

.nav-links a::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--primary-color);
    transition: width 0.3s ease;
}

.nav-links a:hover {
    color: var(--primary-color);
}

.nav-links a:hover::after {
    width: 100%;
}

.nav-controls {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
}

/* Theme Toggle Styles */
.theme-toggle {
    display: flex;
    align-items: center;
}

/* UIverse toggle switch by RiccardoRapelli */
.switch {
  position: relative;
  display: inline-block;
  width: 60px;
  height: 34px;
}

.switch #theme-toggle-btn {
  opacity: 0;
  width: 0;
  height: 0;
}

.slider {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #2196f3;
  -webkit-transition: 0.4s;
  transition: 0.4s;
  z-index: 0;
  overflow: hidden;
}

.sun-moon {
  position: absolute;
  content: "";
  height: 26px;
  width: 26px;
  left: 4px;
  bottom: 4px;
  background-color: yellow;
  -webkit-transition: 0.4s;
  transition: 0.4s;
}

#theme-toggle-btn:checked + .slider {
  background-color: black;
}

#theme-toggle-btn:focus + .slider {
  box-shadow: 0 0 1px #2196f3;
}

#theme-toggle-btn:checked + .slider .sun-moon {
  -webkit-transform: translateX(26px);
  -ms-transform: translateX(26px);
  transform: translateX(26px);
  background-color: white;
  -webkit-animation: rotate-center 0.6s ease-in-out both;
  animation: rotate-center 0.6s ease-in-out both;
}

.moon-dot {
  opacity: 0;
  transition: 0.4s;
  fill: gray;
}

#theme-toggle-btn:checked + .slider .sun-moon .moon-dot {
  opacity: 1;
}

.slider.round {
  border-radius: 34px;
}

.slider.round .sun-moon {
  border-radius: 50%;
}

#moon-dot-1 {
  left: 10px;
  top: 3px;
  position: absolute;
  width: 6px;
  height: 6px;
  z-index: 4;
}

#moon-dot-2 {
  left: 2px;
  top: 10px;
  position: absolute;
  width: 10px;
  height: 10px;
  z-index: 4;
}

#moon-dot-3 {
  left: 16px;
  top: 18px;
  position: absolute;
  width: 3px;
  height: 3px;
  z-index: 4;
}

#light-ray-1 {
  left: -8px;
  top: -8px;
  position: absolute;
  width: 43px;
  height: 43px;
  z-index: -1;
  fill: white;
  opacity: 10%;
}

#light-ray-2 {
  left: -50%;
  top: -50%;
  position: absolute;
  width: 55px;
  height: 55px;
  z-index: -1;
  fill: white;
  opacity: 10%;
}

#light-ray-3 {
  left: -18px;
  top: -18px;
  position: absolute;
  width: 60px;
  height: 60px;
  z-index: -1;
  fill: white;
  opacity: 10%;
}

.cloud-light {
  position: absolute;
  fill: #eee;
  animation-name: cloud-move;
  animation-duration: 6s;
  animation-iteration-count: infinite;
}

.cloud-dark {
  position: absolute;
  fill: #ccc;
  animation-name: cloud-move;
  animation-duration: 6s;
  animation-iteration-count: infinite;
  animation-delay: 1s;
}

#cloud-1 {
  left: 30px;
  top: 15px;
  width: 40px;
}

#cloud-2 {
  left: 44px;
  top: 10px;
  width: 20px;
}

#cloud-3 {
  left: 18px;
  top: 24px;
  width: 30px;
}

#cloud-4 {
  left: 36px;
  top: 18px;
  width: 40px;
}

#cloud-5 {
  left: 48px;
  top: 14px;
  width: 20px;
}

#cloud-6 {
  left: 22px;
  top: 26px;
  width: 30px;
}

@keyframes cloud-move {
  0% {
    transform: translateX(0px);
  }

  40% {
    transform: translateX(4px);
  }

  80% {
    transform: translateX(-4px);
  }

  100% {
    transform: translateX(0px);
  }
}

.stars {
  transform: translateY(-32px);
  opacity: 0;
  transition: 0.4s;
}

.star {
  fill: white;
  position: absolute;
  -webkit-transition: 0.4s;
  transition: 0.4s;
  animation-name: star-twinkle;
  animation-duration: 2s;
  animation-iteration-count: infinite;
}

#theme-toggle-btn:checked + .slider .stars {
  -webkit-transform: translateY(0);
  -ms-transform: translateY(0);
  transform: translateY(0);
  opacity: 1;
}

#star-1 {
  width: 20px;
  top: 2px;
  left: 3px;
  animation-delay: 0.3s;
}

#star-2 {
  width: 6px;
  top: 16px;
  left: 3px;
}

#star-3 {
  width: 12px;
  top: 20px;
  left: 10px;
  animation-delay: 0.6s;
}

#star-4 {
  width: 18px;
  top: 0px;
  left: 18px;
  animation-delay: 1.3s;
}

@keyframes star-twinkle {
  0% {
    transform: scale(1);
  }

  40% {
    transform: scale(1.2);
  }

  80% {
    transform: scale(0.8);
  }

  100% {
    transform: scale(1);
  }
}

@keyframes rotate-center {
  0% {
    transform: translateX(26px) rotate(0);
  }
  100% {
    transform: translateX(26px) rotate(360deg);
  }
}

/* Override for dark/light theme synchronization */
:root:not(.light-mode) #theme-toggle-btn:not(:checked) + .slider,
:root.light-mode #theme-toggle-btn:checked + .slider {
  background-color: #2196f3;
}

:root:not(.light-mode) #theme-toggle-btn:not(:checked) + .slider .sun-moon,
:root.light-mode #theme-toggle-btn:checked + .slider .sun-moon {
  background-color: yellow;
  transform: translateX(0);
}

:root:not(.light-mode) #theme-toggle-btn:not(:checked) + .slider .stars,
:root.light-mode #theme-toggle-btn:checked + .slider .stars {
  opacity: 0;
  transform: translateY(-32px);
}

:root:not(.light-mode) #theme-toggle-btn:not(:checked) + .slider .sun-moon .moon-dot,
:root.light-mode #theme-toggle-btn:checked + .slider .sun-moon .moon-dot {
  opacity: 0;
}

/* Media queries for mobile */
@media screen and (max-width: 768px) {
    /* Disable parallax effects completely on mobile */
    .parallax-bio,
    .parallax-experience, 
    .parallax-image-base,
    .decorative-1,
    .decorative-2,
    .parallax-badge {
        transform: none !important;
        transition: none !important;
    }
    
    /* Ensure proper spacing between sections */
    section {
        padding: var(--mobile-section-spacing) 0;
        margin-bottom: 0;
    }
    
    section + section {
        padding-top: var(--mobile-section-spacing);
    }
    
    /* Improved container padding */
    .container {
        padding: 0 var(--mobile-element-spacing);
    }
    
    /* Parallax container improvements */
    .parallax-about-container {
        padding: 0;
        overflow: visible;
        margin-bottom: var(--mobile-section-spacing);
    }
    
    /* Make social icons and buttons centered */
    .social-links {
        justify-content: center;
        margin: var(--mobile-component-spacing) auto 0;
    }
    
    .cta-buttons {
        margin: 0 auto var(--mobile-component-spacing);
        max-width: 300px;
    }
}

/* Small screens (< 480px) */
@media screen and (max-width: 480px) {
    .parallax-image-container {
        height: 250px;
        width: 200px;
    }
    
    .parallax-bio, 
    .parallax-experience, 
    .parallax-interests {
        padding: var(--spacing-md);
    }
    
    .parallax-interests {
        margin-bottom: calc(var(--spacing-2xl) + var(--spacing-2xl)) !important;
    }
}

/* Remove old styles that could conflict */
.sun-icon, .moon-icon {
  display: none;
}

/* Burger menu for mobile */
.burger {
    display: none;
    cursor: pointer;
}

.burger div {
    width: 25px;
    height: 2px;
    background-color: var(--text-color);
    margin: 5px;
    transition: var(--transition);
}

/* Mobile Navigation */
@media screen and (max-width: 768px) {
    header {
        top: var(--spacing-md);
        padding: 0 var(--spacing-md);
    }
    
    nav.container {
        padding: var(--spacing-sm) var(--spacing-md);
    }
    
    .nav-links {
        position: fixed;
        top: 0;
        right: -100%; /* Start position off-screen */
        height: 100vh;
        width: 0; /* Width 0 when not active */
        background-color: var(--primary-bg);
        backdrop-filter: blur(10px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transition: right 0.3s ease;
        padding: var(--spacing-lg);
        box-shadow: -5px 0 25px rgba(0, 0, 0, 0.3);
        z-index: 99;
        visibility: hidden;
        opacity: 0;
    }

    .nav-links.active {
        right: 0;
        width: 80%; /* Set to specific width for better display */
        max-width: 300px;
        visibility: visible;
        opacity: 1;
    }

    .nav-links li {
        opacity: 0;
        margin: var(--spacing-md) 0;
        width: 100%;
        text-align: center;
    }
    
    .nav-links.active li {
        opacity: 1;
        animation: navLinkFade 0.5s ease forwards;
    }
    
    .nav-links a {
        display: block;
        width: 100%;
        padding: var(--spacing-sm) var(--spacing-md);
    }

    /* Burger menu improvements */
    .burger {
        display: block;
        cursor: pointer;
        z-index: 1000; /* Increased z-index to be above nav */
        position: relative;
        width: 36px;
        height: 36px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .burger div {
        width: 25px;
        height: 3px;
        margin: 4px 0;
        border-radius: 3px;
        background-color: var(--text-color);
        transition: all 0.3s ease;
    }
}

/* Light mode styles for mobile nav */
@media screen and (max-width: 768px) {
    :root.light-mode .nav-links {
        background-color: rgba(255, 255, 255, 0.95);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        border-left: 1px solid rgba(0, 0, 0, 0.05);
    }
    
    :root.light-mode .burger div {
        background-color: #333;
    }
}

.toggle .line1 {
    transform: rotate(-45deg) translate(-5px, 6px);
}

.toggle .line2 {
    opacity: 0;
}

.toggle .line3 {
    transform: rotate(45deg) translate(-5px, -6px);
}

/* Animation for nav links */
@keyframes navLinkFade {
    from {
        opacity: 0;
        transform: translateX(50px);
    }
    to {
        opacity: 1;
        transform: translateX(0px);
    }
}

/* Scrolled header */
header.scrolled nav.container {
    background-color: rgba(10, 10, 12, 0.95);
}

/* Scrolled header in light mode */
:root.light-mode header.scrolled nav.container {
    background-color: rgba(255, 255, 255, 0.95);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    border: 1px solid rgba(0, 0, 0, 0.04);
}

/* Code card container */
.code-animation-container {
    grid-column: 2; /* Assuming this is part of a grid layout in your hero section */
    width: 70%;
    max-width: 700px;
    margin: 0 auto;
    position: relative;
    z-index: 2; /* Ensure it's above other elements if overlapping */
    animation: floater 3s infinite ease-in-out;
}

/* Floating animation */
@keyframes floater {
    0% { transform: translateY(-5px); }
    50% { transform: translateY(5px); }
    100% { transform: translateY(-5px); }
}

/* Code card styling */
.code-card {
    background-color: var(--card-bg);
    border-radius: 12px; /* Or var(--border-radius-lg) if you prefer variable */
    box-shadow: var(--card-shadow);
    border: 1px solid var(--card-border-color); /* Use variable if defined, else --card-border */
    overflow: hidden;
    transform-style: preserve-3d;
    perspective: 1000px;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
    aspect-ratio: 7/4;
    backdrop-filter: blur(10px);
}

/* Glow effect on hover */
.code-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.6); /* Darker shadow, consider var(--card-shadow-hover) */
    border-color: rgba(91, 141, 239, 0.3); /* Primary color with alpha, or var(--primary-color) with adjusted opacity */
}

/* Code header with macOS-like UI */
.code-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #1c1c1e;
    padding: 8px 12px;
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
}

.code-circles {
    display: flex;
    gap: 6px;
}

.code-circle {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.2s ease;
}

.circle-red {
    background-color: #ff5f57;
}

.circle-yellow {
    background-color: #febc2e;
}

.circle-green {
    background-color: #28c840;
}

.code-title {
    color: #aaa;
    font-size: 0.8rem;
    font-weight: 400;
    user-select: none;
}

:root.light-mode .code-header {
    background-color: rgba(230, 230, 235, 0.9);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

:root.light-mode .code-title {
    color: rgba(0, 0, 0, 0.7);
}

/* Hover effects for circles */
.circle-red:hover {
    background-color: #ff7f76;
}

.circle-yellow:hover {
    background-color: #ffcd4e;
}

.circle-green:hover {
    background-color: #47e95f;
}

/* Existing code styles below */
.code-text {
    font-family: var(--font-code, 'Consolas', 'Monaco', monospace); /* Use variable, then fallbacks */
    font-size: 12px; /* Specific size for code */
    line-height: 1.5; /* Increase line height for better readability */
    padding: 15px;
    margin-bottom: 5%;
    color: var(--white-color, #fff); /* Base text color for the code block */
    overflow: hidden;
    text-align: left;
}

/* Syntax highlighting for code within .code-text */
.code-text .tag { /* More specific selector to ensure it applies within code-text */
    color: var(--white-color, #fff); /* CHANGED: Orange text made white */
}

.code-text .content { /* More specific selector */
    color: #8AB4F8; /* This is a blue-like color for content text */
}

/* Ensure line numbers and other specific spans inside code-text are styled if needed */
.code-text .line-number {
    color: #666; /* Or var(--text-muted-color) if you want it themeable */
    margin-right: calc(var(--spacing-xs, 8px) / 2);
    user-select: none;
}

/* Line number styling */
.line-number {
    color: #666;
    margin-right: 10px;
    user-select: none;
    display: inline-block;
    min-width: 20px;
    text-align: right;
}

/* Syntax highlighting */
.tag {
    color: #FF8A65;
}

.content {
    color: #8AB4F8;
}

/* Individual line styling */
.code-line {
    display: flex;
    line-height: 1.7;
    white-space: pre;
    overflow: hidden;
    width: 0;
    margin-left: 0;
    border-right: 1px solid transparent;
    margin-bottom: 0;
}

/* Animation for each line */
.line1 {
    animation: typing 1.5s steps(30, end) forwards, blink-caret 0.75s step-end infinite;
    animation-delay: 0s;
}

.line2 {
    animation: typing 1.5s steps(30, end) forwards, blink-caret 0.75s step-end infinite;
    animation-delay: 1.5s;
    width: 0;
}

.line3 {
    animation: typing 1.5s steps(30, end) forwards, blink-caret 0.75s step-end infinite;
    animation-delay: 3s;
    width: 0;
}

.line4 {
    animation: typing 1.5s steps(30, end) forwards, blink-caret 0.75s step-end infinite;
    animation-delay: 4.5s;
    width: 0;
}

.line5 {
    animation: typing 1.5s steps(30, end) forwards, blink-caret 0.75s step-end infinite;
    animation-delay: 6s;
    width: 0;
}

.line6 {
    animation: typing 1.5s steps(30, end) forwards, blink-caret 0.75s step-end infinite;
    animation-delay: 7.5s;
    width: 0;
}

.line7 {
    animation: typing 1.5s steps(30, end) forwards, blink-caret 0.75s step-end infinite;
    animation-delay: 9s;
    width: 0;
}

.line8 {
    animation: typing 1.5s steps(30, end) forwards, blink-caret 0.75s step-end infinite;
    animation-delay: 10.5s;
    width: 0;
}

.line9 {
    animation: typing 1.5s steps(30, end) forwards, blink-caret 0.75s step-end infinite;
    animation-delay: 12s;
    width: 0;
}

.line10 {
    animation: typing 1.5s steps(30, end) forwards, blink-caret 0.75s step-end infinite;
    animation-delay: 13.5s;
    width: 0;
}

/* Typing animation */
@keyframes typing {
    from { width: 0 }
    to { width: 100% }
}

/* Blinking cursor animation */
@keyframes blink-caret {
    from, to { border-color: transparent }
    50% { border-color: #8AB4F8 }
}

/* Hero Section */
.hero {
    display: grid;
    grid-template-columns: 1fr;
    align-items: center;
    gap: 20px;
    min-height: 100vh;
    padding: 100px 20px 40px;
    position: relative;
}

@media (min-width: 768px) {
    .hero {
        grid-template-columns: 1fr 1fr;
        padding: 80px 40px 40px;
    }
}

.hero-content {
    max-width: 100%;
    z-index: 2;
}

.hero h1 {
    font-size: var(--heading-1);
    font-weight: 400;
    line-height: 1.1;
    margin-bottom: 25px;
    color: var(--text-color);
    letter-spacing: -0.03em;
}

.hero h2 {
    font-size: var(--heading-3);
    font-weight: 400;
    margin-bottom: 25px;
    color: var(--primary-color);
}

.hero p {
    font-size: var(--body-text);
    margin-bottom: 30px;
    color: var(--text-color);
}

.highlight {
    /* Removing the highlight styling */
    display: none;
}

.highlight::after {
    /* Removing the highlight effect */
    display: none;
}

.bold-name {
    color: var(--primary-color);
    font-weight: 700;
    position: relative;
}

.cta-buttons {
    margin-bottom: 30px;
}

.btn {
    display: inline-block;
    padding: 14px 32px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    letter-spacing: 0.02em;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
    position: relative;
    overflow: hidden;
    z-index: 1;
    text-align: center;
}

.btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: 0.5s;
    z-index: -1;
}

.btn:hover::before {
    left: 100%;
}

.primary-btn {
    background-color: var(--primary-color);
    color: #ffffff;
    box-shadow: 0 4px 15px rgba(91, 141, 239, 0.3);
}

.secondary-btn {
    background-color: rgba(91, 141, 239, 0.1);
    border: 1px solid var(--primary-color);
    color: var(--primary-color);
}

.primary-btn:hover {
    background-color: #3366CC;
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(91, 141, 239, 0.4);
}

.secondary-btn:hover {
    background-color: rgba(187, 134, 252, 0.1);
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(187, 134, 252, 0.2);
}

.social-links {
    display: flex;
    gap: 15px;
}

.social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--card-bg);
    color: var(--text-color);
    font-size: 1.2rem;
    transition: var(--transition);
    border: 1px solid var(--card-border);
    position: relative;
    overflow: hidden;
}

.social-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--primary-color);
    transform: scale(0);
    transition: 0.5s;
    border-radius: 50%;
    z-index: -1;
}

.social-btn:hover {
    color: #000;
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(187, 134, 252, 0.4);
}

.social-btn:hover::before {
    transform: scale(1);
}

.hero-particles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

/* Glitch Text Effect */
.glitch-text {
    position: relative;
    animation: glitch 1s linear infinite;
}

.glitch-text::before,
.glitch-text::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.glitch-text::before {
    left: 2px;
    text-shadow: -2px 0 var(--accent-color);
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim 5s infinite linear alternate-reverse;
}

.glitch-text::after {
    left: -2px;
    text-shadow: -2px 0 var(--secondary-color);
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim2 5s infinite linear alternate-reverse;
}

@keyframes glitch-anim {
    0% { clip: rect(31px, 9999px, 94px, 0); }
    5% { clip: rect(70px, 9999px, 71px, 0); }
    10% { clip: rect(29px, 9999px, 43px, 0); }
    15% { clip: rect(15px, 9999px, 13px, 0); }
    20% { clip: rect(76px, 9999px, 85px, 0); }
    25% { clip: rect(79px, 9999px, 92px, 0); }
    30% { clip: rect(26px, 9999px, 25px, 0); }
    35% { clip: rect(89px, 9999px, 6px, 0); }
    40% { clip: rect(42px, 9999px, 51px, 0); }
    45% { clip: rect(28px, 9999px, 59px, 0); }
    50% { clip: rect(71px, 9999px, 40px, 0); }
    55% { clip: rect(33px, 9999px, 5px, 0); }
    60% { clip: rect(62px, 9999px, 78px, 0); }
    65% { clip: rect(51px, 9999px, 26px, 0); }
    70% { clip: rect(7px, 9999px, 13px, 0); }
    75% { clip: rect(25px, 9999px, 39px, 0); }
    80% { clip: rect(68px, 9999px, 50px, 0); }
    85% { clip: rect(52px, 9999px, 47px, 0); }
    90% { clip: rect(83px, 9999px, 3px, 0); }
    95% { clip: rect(21px, 9999px, 47px, 0); }
    100% { clip: rect(59px, 9999px, 20px, 0); }
}

@keyframes glitch-anim2 {
    0% { clip: rect(65px, 9999px, 100px, 0); }
    5% { clip: rect(52px, 9999px, 74px, 0); }
    10% { clip: rect(79px, 9999px, 85px, 0); }
    15% { clip: rect(75px, 9999px, 5px, 0); }
    20% { clip: rect(67px, 9999px, 61px, 0); }
    25% { clip: rect(14px, 9999px, 79px, 0); }
    30% { clip: rect(1px, 9999px, 66px, 0); }
    35% { clip: rect(86px, 9999px, 30px, 0); }
    40% { clip: rect(23px, 9999px, 98px, 0); }
    45% { clip: rect(85px, 9999px, 72px, 0); }
    50% { clip: rect(71px, 9999px, 75px, 0); }
    55% { clip: rect(2px, 9999px, 48px, 0); }
    60% { clip: rect(30px, 9999px, 16px, 0); }
    65% { clip: rect(59px, 9999px, 50px, 0); }
    70% { clip: rect(41px, 9999px, 62px, 0); }
    75% { clip: rect(2px, 9999px, 82px, 0); }
    80% { clip: rect(47px, 9999px, 73px, 0); }
    85% { clip: rect(3px, 9999px, 27px, 0); }
    90% { clip: rect(26px, 9999px, 55px, 0); }
    95% { clip: rect(42px, 9999px, 97px, 0); }
    100% { clip: rect(38px, 9999px, 49px, 0); }
}

/* Stats Section */
.stats {
    padding: 80px 0;
    background-color: transparent;
    position: relative;
    z-index: 2;
}

.stats-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: clamp(20px, 3vw, 30px);
    place-items: center;
    margin-top: clamp(30px, 5vw, 50px);
}
.stat-card {
    background-color: var(--card-bg);
    border-radius: 12px;
    padding: min(30px, 5vw);
    text-align: center;
    width: 100%;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    box-shadow: var(--card-shadow);
    position: relative;
    overflow: hidden;
    transform-style: preserve-3d;
    perspective: 1000px;
    --x: 50%;
    --y: 50%;
    --glow-opacity: 0;
    backdrop-filter: blur(10px);
}

.stat-card::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: radial-gradient(
        circle at var(--x, 50%) var(--y, 50%),
        rgba(138, 180, 248, 0.7) 0%,
        transparent 70%
    );
    opacity: var(--glow-opacity, 0);
    transition: opacity 0.3s;
    pointer-events: none;
    z-index: 1;
}

.stat-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.6);
    border-color: rgba(91, 141, 239, 0.3);
    --glow-opacity: 1;
}

.stat-card:hover::before {
    transform: translateY(0);
}

.stat-card h2 {
    font-size: 2.5rem;
    margin-bottom: 10px;
    color: #8AB4F8;
    position: relative;
    z-index: 2;
}

.stat-card p {
    color: var(--text-color);
    font-size: 1rem;
    position: relative;
    z-index: 2;
}

/* About Section */
.about-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 30px;
    align-items: center;
}

@media (min-width: 768px) {
    .about-content {
        grid-template-columns: 3fr 2fr;
        gap: 50px;
    }
}

.about-text p {
    margin-bottom: 15px;
    color: var(--text-color);
}

.about-image {
    position: relative;
    max-width: 500px;
    margin: 0 auto;
}

.image-wrapper {
    position: relative;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: var(--card-shadow);
    transition: var(--transition);
}

.image-wrapper::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, var(--primary-color), transparent);
    opacity: 0.3;
    transition: var(--transition);
}

.image-wrapper:hover::before {
    opacity: 0.5;
}

.about-image img {
    width: 100%;
    height: auto;
    max-width: 100%;
    border-radius: 10px;
    transition: var(--transition);
    filter: grayscale(30%);
}

.about-image:hover img {
    filter: grayscale(0%);
    transform: scale(1.03);
}

/* Projects Section */
.project-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(20px, 3vw, 30px);
    margin-top: clamp(30px, 5vw, 50px);
}

@media (min-width: 576px) {
    .project-grid {
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }
}

.project-card {
    background-color: var(--card-bg);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--card-shadow);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    border: 1px solid var(--card-border);
    position: relative;
    backdrop-filter: blur(10px);
}

.project-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 5px;
    height: 0;
    background: var(--primary-color);
    transition: height 0.5s ease;
}

.project-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.6);
}

.project-card:hover::before {
    height: 100%;
}

.project-info {
    padding: 20px;
}

.project-info h3 {
    font-size: 1.5rem;
    margin-bottom: 10px;
    color: var(--text-color);
}

.project-info p {
    margin-bottom: 15px;
    color: #aaa;
}

.project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 20px;
}

.project-tech span {
    background-color: rgba(187, 134, 252, 0.1);
    color: var(--primary-color);
    padding: 5px 10px;
    border-radius: 5px;
    font-size: 0.9rem;
    transition: var(--transition);
}

.project-card:hover .project-tech span {
    background-color: rgba(187, 134, 252, 0.2);
}

.small-btn {
    padding: 8px 15px;
    font-size: 0.9rem;
    color: #8AB4F8;
}

/* Skills Section */
.skills-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(25px, 4vw, 40px);
    margin-top: clamp(30px, 5vw, 50px);
}

@media (min-width: 992px) {
    .skills-container {
        grid-template-columns: repeat(auto-fill, minmax(450px, 1fr));
    }
}

.skill-category {
    margin-bottom: 30px;
}

.skill-category h3 {
    font-size: 1.5rem;
    margin-bottom: 20px;
    color: var(--primary-color);
}

.skill-items {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.skill {
    width: 100%;
}

.skill-name {
    margin-bottom: 5px;
    font-weight: 500;
    color: var(--text-color);
}

.skill-bar {
    height: 10px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 5px;
    overflow: hidden;
    position: relative;
}

.skill-bar::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    animation: skill-shine 2s infinite linear;
}

@keyframes skill-shine {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
}

.skill-level {
    height: 100%;
    background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    border-radius: 5px;
    position: relative;
    overflow: hidden;
}

.skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
}

.skill-tag {
    background-color: rgba(187, 134, 252, 0.1);
    color: var(--primary-color);
    padding: 8px 15px;
    border-radius: 5px;
    font-size: 0.9rem;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

.skill-tag::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: 0.5s;
}

.skill-tag:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

.skill-tag:hover::before {
    left: 100%;
}

/* Experience Section */
.timeline {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
}

.timeline::before {
    content: '';
    position: absolute;
    width: 2px;
    background-color: var(--primary-color);
    top: 0;
    bottom: 0;
    left: 20px;
}

.timeline-item {
    padding: 10px 10px 10px 50px;
    position: relative;
    width: 100%;
    left: 0;
}

.timeline-dot {
    position: absolute;
    width: 16px;
    height: 16px;
    background-color: var(--card-bg);
    border: 3px solid var(--primary-color);
    border-radius: 50%;
    top: 15px;
    left: 13px;
    z-index: 1;
    transition: var(--transition);
}

.timeline-item:hover .timeline-dot {
    background-color: var(--primary-color);
    box-shadow: 0 0 10px var(--primary-color);
}

.timeline-content {
    padding: 20px;
    background-color: var(--card-bg);
    border-radius: 12px;
    box-shadow: var(--card-shadow);
    transition: var(--transition);
    border: 1px solid var(--card-border);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
}

.timeline-content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background: linear-gradient(90deg, var(--primary-color), transparent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.5s ease;
}

.timeline-item:hover .timeline-content {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
}

.timeline-item:hover .timeline-content::before {
    transform: scaleX(1);
}

.timeline-content h3 {
    font-size: 1.5rem;
    margin-bottom: 5px;
    color: var(--primary-color);
}

.timeline-content h4 {
    font-size: 1.2rem;
    margin-bottom: 10px;
    color: var(--text-color);
}

.timeline-date {
    font-size: 0.9rem;
    color: #aaa;
    margin-bottom: 10px;
}

@media (min-width: 768px) {
    .timeline::before {
        left: 50%;
        transform: translateX(-50%);
    }
    
    .timeline-item {
        width: 50%;
        padding: 10px 40px;
    }
    
    .timeline-item:nth-child(even) {
        left: 50%;
    }
    
    .timeline-dot {
        right: -10px;
        left: auto;
    }
    
    .timeline-item:nth-child(even) .timeline-dot {
        left: -10px;
        right: auto;
    }
}

/* Education Section */
.education-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(20px, 3vw, 30px);
    margin-top: clamp(30px, 5vw, 50px);
