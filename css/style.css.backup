:root.light-mode .stair-layout .timeline-content {
    background-color: rgba(255, 255, 255, 0.9);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

:root.light-mode .stair-layout .timeline-item:hover .timeline-content {
