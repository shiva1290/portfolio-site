}

.decorative-1 {
    position: absolute;
    width: 140px;
    height: 140px;
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
    border-radius: 16px;
    top: -20px;
    left: -20px;
    z-index: 1;
    transform: rotate(-10deg);
}

.decorative-2 {
    position: absolute;
    width: 80px;
    height: 80px;
