.scroll-animation {
  opacity: 0;
  will-change: transform, opacity;
}

.scroll-animation.fade-in-up {
  animation: fadeInUp 0.6s ease forwards;
}

.scroll-animation.fade-in-left {
  animation: fadeInLeft 0.6s ease forwards;
}

.scroll-animation.fade-in-right {
  animation: fadeInRight 0.6s ease forwards;
}

.scroll-animation.delay-100 {
  animation-delay: 0.1s;
}

.scroll-animation.delay-200 {
  animation-delay: 0.2s;
}

.scroll-animation.delay-300 {
  animation-delay: 0.3s;
}

.scroll-animation.delay-400 {
  animation-delay: 0.4s;
}

.scroll-animation.delay-500 {
  animation-delay: 0.5s;
}

/* Section animations */
section {
  opacity: 0;
  transform: translateY(20px);
  transition: opacity 0.6s ease, transform 0.6s ease;
}

section.appear {
  opacity: 1;
  transform: translateY(0);
}

/* Card staggered animations */
.project-grid article,
.stair-layout article,
.stats-container .stat-card,
.education-container article,
.certifications-container a,
.achievements-container article {
  opacity: 0;
  transform: translateY(30px);
  transition: opacity 0.5s ease, transform 0.5s ease;
}

.project-grid.animated article,
.stair-layout.animated article,
.stats-container.animated .stat-card,
.education-container.animated article,
.certifications-container.animated a,
.achievements-container.animated article {
  opacity: 1;
  transform: translateY(0);
}

/* Staggered delay for multiple items */
.project-grid.animated article:nth-child(1),
.stair-layout.animated article:nth-child(1),
.stats-container.animated .stat-card:nth-child(1),
.education-container.animated article:nth-child(1),
.certifications-container.animated a:nth-child(1),
.achievements-container.animated article:nth-child(1) {
  transition-delay: 0.1s;
}

.project-grid.animated article:nth-child(2),
.stair-layout.animated article:nth-child(2),
.stats-container.animated .stat-card:nth-child(2),
.education-container.animated article:nth-child(2),
.certifications-container.animated a:nth-child(2),
.achievements-container.animated article:nth-child(2) {
  transition-delay: 0.2s;
}

.project-grid.animated article:nth-child(3),
.stair-layout.animated article:nth-child(3),
.stats-container.animated .stat-card:nth-child(3),
.education-container.animated article:nth-child(3),
.certifications-container.animated a:nth-child(3),
.achievements-container.animated article:nth-child(3) {
  transition-delay: 0.3s;
}

.project-grid.animated article:nth-child(4),
.stair-layout.animated article:nth-child(4),
.stats-container.animated .stat-card:nth-child(4),
.education-container.animated article:nth-child(4),
.certifications-container.animated a:nth-child(4),
.achievements-container.animated article:nth-child(4) {
  transition-delay: 0.4s;
}

/* Smooth scrolling for the whole page */
html {
  scroll-behavior: smooth;
}

/* Light mode override for mobile nav */
@media screen and (max-width: 768px) {
    :root.light-mode .nav-links {
        background-color: rgba(255, 255, 255, 0.95);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(0, 0, 0, 0.08);
    }
}

/* 3D Card Stack for About Me Section */
.about-3d-stack {
    position: relative;
    width: 100%;
    height: 450px;
    transform-style: preserve-3d;
    perspective: var(--card-stack-perspective);
    margin: 2rem auto;
}

.card-stack-container {
    position: relative;
    width: var(--card-stack-width);
    height: var(--card-stack-height);
    transform-style: preserve-3d;
    transition: transform 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    transform: 
        rotateY(var(--card-stack-rotateY)) 
        rotateX(var(--card-stack-rotateX))
        translateZ(var(--card-stack-translateZ));
}

.about-3d-card {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: var(--card-bg);
    border-radius: var(--radius-lg);
    box-shadow: var(--card-shadow);
    border: 1px solid var(--card-border);
    padding: var(--spacing-xl);
    backface-visibility: hidden;
    transform-style: preserve-3d;
    transition: transform 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    overflow: hidden;
    backdrop-filter: blur(10px);
}

.about-3d-card h3 {
    color: var(--primary-color);
    margin-bottom: var(--spacing-md);
    font-size: var(--heading-3);
}

.about-3d-card p {
    margin-bottom: var(--spacing-md);
    font-size: var(--body-text);
}

.card-content {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.about-3d-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(91, 141, 239, 0.1) 0%, transparent 80%);
    z-index: 0;
}

.about-card-1 {
    transform: translateZ(var(--card-1-z));
}

.about-card-2 {
    transform: translateZ(var(--card-2-z));
}

.about-card-3 {
    transform: translateZ(var(--card-3-z));
}

.card-nav {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
}

.card-nav-btn {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.3);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
}

.card-nav-btn.active {
    background-color: var(--primary-color);
    transform: scale(1.2);
}

.card-controls {
    display: flex;
    justify-content: space-between;
    margin-top: var(--spacing-md);
}

.card-prev-btn, .card-next-btn {
    background-color: rgba(91, 141, 239, 0.2);
    color: var(--primary-color);
    border: none;
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: var(--radius-md);
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    transition: var(--transition);
    font-size: 0.9rem;
}

.card-prev-btn:hover, .card-next-btn:hover {
    background-color: rgba(91, 141, 239, 0.3);
    transform: translateY(-2px);
}

.card-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 40px;
    height: 40px;
    margin-bottom: var(--spacing-md);
    border-radius: 12px;
    background-color: rgba(91, 141, 239, 0.15);
    color: var(--primary-color);
    font-size: 1.2rem;
}

/* Light mode overrides for 3D card stack */
:root.light-mode .about-3d-card {
    background-color: rgba(255, 255, 255, 0.85);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(0, 0, 0, 0.05);
}

:root.light-mode .about-3d-card::before {
    background: linear-gradient(135deg, rgba(30, 112, 240, 0.08) 0%, transparent 80%);
}

:root.light-mode .card-nav-btn {
    background-color: rgba(0, 0, 0, 0.2);
}

:root.light-mode .card-prev-btn, 
:root.light-mode .card-next-btn {
    background-color: rgba(30, 112, 240, 0.1);
}

:root.light-mode .card-prev-btn:hover, 
:root.light-mode .card-next-btn:hover {
    background-color: rgba(30, 112, 240, 0.2);
}

:root.light-mode .card-icon {
    background-color: rgba(30, 112, 240, 0.1);
}

/* Responsive styles for 3D card stack */
@media (max-width: 768px) {
    .about-3d-stack {
        height: 500px;
    }
    
    .card-stack-container {
        --card-stack-width: 100%;
    }
}

/* Animation for cards */
@keyframes cardFloatIn {
    0% {
        opacity: 0;
        transform: translateZ(-200px);
    }
    100% {
        opacity: 1;
        transform: translateZ(var(--card-1-z));
    }
}

/* Responsive About Me Section */
.parallax-about-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 350px;
    padding: var(--spacing-xl) 0;
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-2xl);
    width: 100%;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
}

.parallax-cards-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: stretch;
    gap: 30px;
    width: 100%;
    padding: var(--spacing-lg) 0;
}

@media (max-width: 768px) {
    .parallax-about-container {
        gap: var(--spacing-md);
        min-height: auto;
        margin-bottom: var(--spacing-2xl);
        padding: 0;
    }
    
    .parallax-cards-container {
        flex-direction: column;
        gap: 20px;
    }
}

.parallax-left h3 {
    color: var(--primary-color);
