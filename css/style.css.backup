@media (min-width: 768px) {
    .achievements-container {
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    }
}

.achievement-item {
    display: flex;
    background-color: var(--card-bg);
    padding: 25px;
    border-radius: 12px;
    box-shadow: var(--card-shadow);
