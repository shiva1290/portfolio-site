    transition: transform 0.3s ease;
    transform-style: preserve-3d;
    perspective: 1000px;
    z-index: 2;
}

.parallax-image-base {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 12px;
    position: relative;
    z-index: 2;
