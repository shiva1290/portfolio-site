}

.parallax-bio p, .parallax-experience p {
    font-size: 0.92rem;
    line-height: 1.6;
    margin-bottom: var(--spacing-sm);
}

.parallax-bio h3, .parallax-experience h3 {
    color: var(--primary-color);
    font-size: calc(var(--heading-3) * 0.8);
    margin-bottom: var(--spacing-md);
    font-weight: 600;
    position: relative;
    display: inline-block;
    text-align: center;
    width: 100%;
}

.parallax-bio h3::after, .parallax-experience h3::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, var(--primary-color), transparent);
