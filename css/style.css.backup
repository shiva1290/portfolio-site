    margin-bottom: var(--spacing-sm);
    font-weight: 500;
    position: relative;
    display: inline-block;
    text-align: center;
    width: 100%;
}

.parallax-bio h3, .parallax-experience h3 {
    color: var(--primary-color);
    font-size: calc(var(--heading-3) * 0.8);
    margin-bottom: var(--spacing-sm);
    font-weight: 500;
    position: relative;
    display: inline-block;
    text-align: center;
    width: 100%;
}

.parallax-bio h3::after, .parallax-experience h3::after {
    content: '';
