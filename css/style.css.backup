/* Base styles for cards with glow effect */
.project-card, .stat-card, .education-item, .certification-item, .achievement-item {
    --x: 0px;
    --y: 0px;
    --glow-color: var(--primary-color);
    --glow-size: 300px;
    --glow-opacity: 0;
    position: relative;
    overflow: hidden;
    transition: transform 0.2s ease;
    will-change: transform;
    transform-style: preserve-3d;
}

/* Glow effect */
.project-card::before, .stat-card::before, .education-item::before, 
.certification-item::before, .achievement-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: inherit;
    background: radial-gradient(
        circle var(--glow-size) at var(--x) var(--y),
        var(--glow-color),
        transparent
    );
    opacity: var(--glow-opacity);
    z-index: -1;
    pointer-events: none;
    transition: opacity 0.3s ease;
}

/* Custom glow colors for different card types */
.project-card {
    --glow-color: rgba(187, 134, 252, 0.7);
}

.stat-card {
    --glow-color: rgba(3, 218, 198, 0.7);
}

.education-item {
    --glow-color: rgba(255, 64, 129, 0.7);
}

.certification-item {
    --glow-color: rgba(255, 193, 7, 0.7);
}

.achievement-item {
    --glow-color: rgba(1, 63, 92, 0.7);
}

/* Hover state */
.project-card:hover, .stat-card:hover, .education-item:hover, 
.certification-item:hover, .achievement-item:hover {
    --glow-opacity: 0.7;
    z-index: 1;
}

/* Ensure smooth transitions */
.project-card::before, .stat-card::before, .education-item::before, 
.certification-item::before, .achievement-item::before,
.project-card, .stat-card, .education-item, .certification-item, .achievement-item {
    transition: all 0.2s ease;
}

/* Mobile Navigation */
@media only screen and (max-width: 768px) {
    .hero {
      display: flex;
      flex-direction: column;
      gap: 20px;
      min-height: 70vh;
    }
    .hero-particles{
        min-height: 70vh;
    }
    .profile-image img, 
    .about-image img,
    .image-wrapper {
      max-width: 80%;
      height: auto;
      align-items: center;
      margin-left: auto;
      margin-right: auto;
    }
  
    .hero-content {
      order: 1;
      text-align: center;
    }
  
    .code-animation-container {
      order: 2;
      width: 90%;
      margin: 20px auto 0;
    }
  }
  

/* For all images */
img {
    max-width: 100%;
    height: auto;
    display: block;
}

/* Animation for nav links */
@keyframes navLinkFade {
    from {
        opacity: 0;
        transform: translateX(50px);
    }
    to {
        opacity: 1;
        transform: translateX(0px);
    }
}

.toggle .line1 {
    transform: rotate(-45deg) translate(-5px, 6px);
}

.toggle .line2 {
    opacity: 0;
}

.toggle .line3 {
    transform: rotate(45deg) translate(-5px, -6px);
}

/* Section animations */
section {
    opacity: 0.1; /* Start slightly visible instead of completely hidden */
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
    animation: fallbackAppear 1s forwards 0.5s; /* Fallback animation */
}

section.appear {
    opacity: 1;
    transform: translateY(0);
    animation: none; /* Cancel fallback animation if appear class is added */
}

/* Fallback animation to ensure content eventually appears even if JS fails */
@keyframes fallbackAppear {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Card staggered animations - with fallback */
.project-grid article,
.stair-layout article,
.stats-container .stat-card,
.education-container article,
.certifications-container a,
.achievements-container article {
    opacity: 0.2; /* Start slightly visible */
    transform: translateY(30px);
    transition: opacity 0.5s ease, transform 0.5s ease;
    animation: fallbackCardAppear 1s forwards 1s; /* Fallback animation with delay */
}

.project-grid.animated article,
.stair-layout.animated article,
.stats-container.animated .stat-card,
.education-container.animated article,
.certifications-container.animated a,
.achievements-container.animated article {
    opacity: 1;
    transform: translateY(0);
    animation: none; /* Cancel fallback if animated class is added */
}

/* Fallback animation for cards */
@keyframes fallbackCardAppear {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* No JS fallback - force all content to be visible after 2 seconds */
html.no-js section,
html.no-js .project-grid article,
html.no-js .stair-layout article,
html.no-js .stats-container .stat-card,
html.no-js .education-container article,
html.no-js .certifications-container a,
html.no-js .achievements-container article {
    opacity: 1 !important;
    transform: none !important;
    animation: none !important;
    transition: none !important;
}

