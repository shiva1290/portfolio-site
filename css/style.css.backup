    bottom: -6px;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 3px;
    background: linear-gradient(90deg, var(--primary-color), transparent);
}

.parallax-bio, .parallax-experience {
    margin-bottom: 0;
    transform: translateY(0);
